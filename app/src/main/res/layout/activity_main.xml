<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mhowat1.nait.ca.dmit2504lab02.MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/layout_main_activity">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="@string/main_activity_new_list" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/main_activity_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/main_activity_new_list_edit_text" />

        <Button
            android:id="@+id/main_activity_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_activity_add_list_button"
            android:layout_gravity="top"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_activity_select"/>


        <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/main_activity_spinner" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_activity_preview"
        android:layout_gravity="center_horizontal"/>

    <ListView
        android:id="@+id/todo_item_list_view"
        android:layout_width="match_parent"
        android:layout_height="350dp">
    </ListView>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_list" />
    <Button
        android:id="@+id/main_activity_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/main_activity_edit_list"/>

</LinearLayout>
